@using Indigo.Areas.Admin.ViewModel;
@model UpdateProductVM

<div class"container" style="width: 80%">
    <div class"row">
        <form method="post" enctype="multipart/form-data">
            <div style="margin-left:100px" class="form-group">
                <label asp-for="Title">Title</label>
                <input type="text" class="form-control" asp-for="Title" placeholder="Title">
                <span asp-validation-for="Title" style="color:red"></span>
            </div>
            <div style="margin-left:100px" class="form-group">
                <label asp-for="Description">Description</label>
                <input type="text" class="form-control" asp-for="Description" placeholder="Description">
                <span asp-validation-for="Description" style="color:red"></span>
            </div>

            <div style="margin-left:600px" class="row align-items-center">
                <div class="mb-3 col-md-4">
                    <label asp-for="ImageUrl" class="form-label">Photo</label>
                    <input class="form-control" asp-for="ImageUrl">
                    <span asp-validation-for="ImageUrl" style="color:red"></span>
                </div>
            </div>
            <button style="margin-left:800px" type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>
